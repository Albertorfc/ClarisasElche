{% extends "layouts/base.njk" %}

{% block content %}
<section class="noticias-seccion" data-aos="fade-up">
  <h1 class="centrado">{{ title }}</h1>

  <div class="centrado" style="margin-bottom: 2rem;">
    {{ content | safe }}
  </div>

  {% if collections.noticias and collections.noticias.length %}
    <div class="noticias-grid">
      {% for post in collections.noticias | reverse %}
        <article class="noticia">
          <a href="{{ post.url }}" class="noticia-imagen-link">
            {% if post.data.image %}
              <img src="{{ post.data.image }}" alt="{{ post.data.title }}">
            {% endif %}
          </a>
          <div class="noticia-contenido">
            <h4 class="noticia-titulo"><a href="{{ post.url }}">{{ post.data.title }}</a></h4>
            <p class="noticia-fecha"><em>{{ post.date | readableDate }}</em></p>
            {% if post.data.excerpt %}
              <p class="noticia-extracto">{{ post.data.excerpt }}</p>
            {% endif %}
            <a href="{{ post.url }}" class="boton boton-lectura">Leer más</a>
          </div>
        </article>
      {% endfor %}
    </div>
  {% else %}
    <p class="centrado">Aún no hay noticias publicadas.</p>
  {% endif %}
</section>
{% endblock %}
