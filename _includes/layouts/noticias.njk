{% extends "layouts/base.njk" %}

{% block content %}
<section class="seccion-actualidad">
  <h2 class="titulo-seccion centrado">Noticias recientes del Monasterio</h2>

  <div class="noticias-intro">
    {{ content | safe }}
  </div>

  <div class="noticias-grid">
    {% for post in collections.noticias | reverse if post.url !== page.url %}
    <article class="noticia" data-aos="fade-up">
      <a href="{{ post.url }}" class="noticia-imagen-link">
        <img src="{{ post.data.image }}" alt="{{ post.data.title }}">
      </a>
      <div class="noticia-contenido">
        <h3 class="noticia-titulo">
          <a href="{{ post.url }}">{{ post.data.title }}</a>
        </h3>
        <p class="noticia-fecha"><em>{{ post.date | readableDate }}</em></p>
        <p class="noticia-extracto">{{ post.data.excerpt }}</p>
        <a href="{{ post.url }}" class="boton boton-lectura">Leer m√°s</a>
      </div>
    </article>
    {% endfor %}
  </div>
</section>
{% endblock %}
